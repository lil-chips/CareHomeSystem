<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="350" prefWidth="500" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="edu.rmit.cosc1295.ui.AssignShiftController">

    <children>
        <Label layoutX="200.0" layoutY="30.0" prefHeight="32.0" prefWidth="169.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Assign or Edit Shift" />

        <Label layoutX="84.0" layoutY="109.0" text="Select Staff:" />
        <ChoiceBox fx:id="staffChoice" layoutX="184.0" layoutY="105.0" prefWidth="200" />

        <Label layoutX="105.0" layoutY="154.0" text="Day:" />
        <ChoiceBox fx:id="dayChoice" layoutX="184.0" layoutY="150.0" prefWidth="200" />

        <Label layoutX="102.0" layoutY="202.0" text="Time:" />
        <ChoiceBox fx:id="timeChoice" layoutX="184.0" layoutY="198.0" prefWidth="200" />

        <Button fx:id="assignBtn" layoutX="184.0" layoutY="266.0" onAction="#onAssignShift" prefWidth="200" text="Assign Shift" />

        <Button fx:id="backBtn" layoutX="20" layoutY="20" onAction="#onBack" prefWidth="80" text="Back" />
    </children>
</AnchorPane>
