<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.rmit.cosc1295.ui.ViewResidentsController"
            prefWidth="600" prefHeight="400">

    <Label text="Resident Details" layoutX="230" layoutY="20"
           style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <Button fx:id="backBtn" text="Back" layoutX="20" layoutY="20"
            onAction="#onBack"/>

    // Resident basic info
    <Label text="Name:" layoutX="60" layoutY="80" />
    <Label fx:id="nameLabel" layoutX="130" layoutY="80" text="-" />

    <Label text="Gender:" layoutX="60" layoutY="110"/>
    <Label fx:id="genderLabel" layoutX="130" layoutY="110" text="-" />

    <Label text="Bed ID:" layoutX="60" layoutY="140"/>
    <Label fx:id="bedLabel" layoutX="130" layoutY="140" text="-" />

    // Prescriptions table
    <TableView fx:id="prescriptionTable" layoutX="60" layoutY="190"
               prefWidth="480" prefHeight="160">

        <columns>
            <TableColumn fx:id="doctorCol" text="Doctor ID" prefWidth="120"/>
            <TableColumn fx:id="medicineCol" text="Medicine" prefWidth="120"/>
            <TableColumn fx:id="doseCol" text="Dose" prefWidth="120"/>
            <TableColumn fx:id="timeCol" text="Time" prefWidth="120"/>
        </columns>
    </TableView>
</AnchorPane>
