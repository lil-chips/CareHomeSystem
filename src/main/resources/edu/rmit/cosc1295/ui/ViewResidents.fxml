<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.rmit.cosc1295.ui.ViewResidentsController">

    <children>
        <Label layoutX="231.0" layoutY="30.0" prefHeight="33.0" prefWidth="139.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Resident Details">
         <font>
            <Font size="14.0" />
         </font></Label>

        <TableView fx:id="residentTable" layoutX="50" layoutY="80" prefHeight="250" prefWidth="500">
            <columns>
                <TableColumn fx:id="nameCol" prefWidth="150" text="Name" />
                <TableColumn fx:id="genderCol" prefWidth="100" text="Gender" />
                <TableColumn fx:id="bedCol" prefWidth="100" text="Bed ID" />
                <TableColumn fx:id="prescriptionCol" prefWidth="150" text="Prescriptions" />
            </columns>
        </TableView>

        <Button fx:id="backBtn" layoutX="20" layoutY="20" onAction="#onBack" prefWidth="80" text="Back" />
    </children>
</AnchorPane>
