<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400" prefWidth="600" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="edu.rmit.cosc1295.ui.DashboardController">

    <children>
        <Label fx:id="welcomeLabel" layoutX="160" layoutY="50" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Welcome to CareHome Dashboard" />

        <Button fx:id="staffBtn" layoutX="80" layoutY="150" prefWidth="150" text="Staff List" />
        <Button fx:id="residentBtn" layoutX="250" layoutY="150" prefWidth="150" text="Residents" />
        <Button fx:id="logsBtn" layoutX="420" layoutY="150" prefWidth="100" text="Logs" />

        <Button fx:id="logoutBtn" layoutX="250" layoutY="300" onAction="#onLogout" text="Logout" />

    </children>
</AnchorPane>
