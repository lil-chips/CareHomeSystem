<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400" prefWidth="600" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="edu.rmit.cosc1295.ui.ViewShiftsController">

    <Label layoutX="247.0" layoutY="35.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="All Staff Shifts" />

    <Button fx:id="backBtn" layoutX="20" layoutY="20" onAction="#onBack" text="Back" />

    <TableView fx:id="shiftTable" layoutX="50" layoutY="80" prefHeight="280" prefWidth="500">
        <columns>
            <TableColumn fx:id="staffIdCol" prefWidth="100" text="Staff ID" />
            <TableColumn fx:id="nameCol" prefWidth="120" text="Name" />
            <TableColumn fx:id="roleCol" prefWidth="100" text="Role" />
            <TableColumn fx:id="dayCol" prefWidth="90" text="Day" />
            <TableColumn fx:id="timeCol" prefWidth="90" text="Time" />
        </columns>
    </TableView>
</AnchorPane>
