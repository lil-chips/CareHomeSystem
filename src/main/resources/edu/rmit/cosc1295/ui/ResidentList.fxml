<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.rmit.cosc1295.ui.ResidentListController"
            prefWidth="600" prefHeight="400">

    <Label text="Residents List" layoutX="240" layoutY="20"
           style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <Button fx:id="backBtn" text="Back" layoutX="20" layoutY="20"
            onAction="#onBack"/>

    <TableView fx:id="residentTable" layoutX="50" layoutY="70"
               prefWidth="500" prefHeight="280">
        <columns>
            <TableColumn fx:id="nameCol" text="Name" prefWidth="120"/>
            <TableColumn fx:id="genderCol" text="Gender" prefWidth="100"/>
            <TableColumn fx:id="bedCol" text="Bed ID" prefWidth="80"/>
            <TableColumn fx:id="prescriptionCol" text="Prescriptions" prefWidth="200"/>
        </columns>
    </TableView>
</AnchorPane>
